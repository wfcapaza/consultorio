@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Tu código JavaScript aquí
            fetch('/Usuario/ListarUsuario')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error al obtener los datos');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log(data);
                    // Puedes seguir trabajando con los datos aquí
